@model Core.Demandante.Demandante

<!-- Scripts-->
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
<script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-i18n/1.5.0/angular-locale_es-es.min.js"></script>

<script src="~/Scripts propios/demandanteController.js"></script>

<div ng-app="app">
    <img src='~/Imagenes/pexels-photo-884454.jpeg' style='position:fixed;top:0;left:0;width:100%;height:100%;z-index:-1;opacity:0.25'>

    <div ng-controller="DemandanteController" data-ng-init="ObtenerEstudios()" class="demo" style="width:auto">
        <form id="myForm" method="post">

            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <div class=" titulo">
                        <br>
                        <h4 style="text-align:justify">Esta es la <b>primera vez que accedes</b>, por favor rellena los datos siguientes para registrarte como nuevo <b>demandante</b>.</h4><br>
                    </div>
                </div>
                <div class="col-sm-4"></div>
            </div>

            <div class="row">
                <div class="col-sm-4"></div>

                <div class="col-sm-4" style="height:680px">

                    <div class="well" style="border-radius:0; background-color:#383838; padding:0; margin:0; border:1px solid #383838">
                        <h5 style="text-align:center; color:white">Registro de nuevo demandante</h5>
                    </div>
                    <div class="well" style="border-radius:0; background-color:#f9f9f9;">

                        <div class="form-group">
                            <span>Foto de perfil:</span><br />
                            <input type="file" fileread="dem.ImagenB64" class="form-control" name="fotoPerfil" id="fotoPerfil" style="border-radius:0; max-width:500px; border-color:#dedede;" />
                        </div>

                        <div class="form-group">
                            <span>Edad:</span><br />
                            <input type="number" ng-model="dem.Edad" class="form-control" name="edad" id="edad" ng-model="edad" required style="border-radius:0; max-width:500px; border-color:#dedede;">
                        </div>

                        <div class="form-group">
                            <span>Teléfono</span> <i><small>(opcional):</small></i><br />
                            <input type="text" ng-model="dem.Telefono" class="form-control" name="telefono" id="telefono" style="border-radius:0; max-width:500px; border-color:#dedede;" />
                        </div>

                        <div class="form-group">
                            <span>Email</span> <i><small>(opcional):</small></i><br />
                            <input type="email" ng-model="dem.Email" class="form-control" name="email" id="email" style="border-radius:0; max-width:500px; border-color:#dedede;" />
                        </div>

                        <div class="form-group">
                            <span>Perfil de Linkedin</span> <i><small>(opcional):</small></i><br />
                            <input type="text" ng-model="dem.PerfilLinkedin" class="form-control" name="perfilLinkedin" id="perfilLinkedin" style="border-radius:0; max-width:500px; border-color:#dedede;" />
                        </div>

                        <div class="form-group">
                            <span>Nivel de estudios:</span><br />
                            <select class="form-control" ng-model="dem.NivelEstudios" ng-options="estudio.NivelEstudios as estudio.Nombre for estudio in estudios" required style="border-radius:0; max-width:500px; border-color:#dedede;">
                                <option value="" selected disabled hidden>Selecciona uno de la lista</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <span>Experiencia laboral:</span><br />
                            <input type="text" ng-model="dem.ExperienciaLaboral" class="form-control" name="experienciaLaboral" id="experienciaLaboral" required style="border-radius:0; max-width:500px; border-color:#dedede;" />
                        </div>

                        <div class="form-group text-center">
                            <br /><br />
                            <input type="submit" class="btn btn-danger" value=" Registrar demandante" id="btn-submit" ng-click="GuardarDatosDemandante()" style="border-radius:0; border:none; max-width:none;">
                        </div>

                    </div>
                </div>
                <div class="col-sm-4"></div>

            </div>
        </form>
    </div>
</div>