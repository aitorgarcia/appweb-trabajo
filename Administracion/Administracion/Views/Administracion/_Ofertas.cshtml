@model List<Core.Empleador.OfertaEmpleo>


<h4>Listado de ofertas:</h4><br />
<div data-ng-init="listOfertas = @Json.Encode(Model)">
    <table class="table table-striped table-bordered" style="text-align:center">
        <thead style="background-color:#565656; overflow:hidden">
            <tr style="color:white">
                <th style="text-align:center; font-weight:normal; vertical-align:middle">Id Oferta</th>
                <th style="text-align:center; font-weight:normal; vertical-align:middle">Id Empleador</th>
                <th style="text-align:center; font-weight:normal; vertical-align:middle">Título</th>
                <th style="text-align:center; font-weight:normal; vertical-align:middle">Nº Vacantes</th>
                <th style="text-align:center; font-weight:normal; vertical-align:middle">Sueldo</th>
                <th style="text-align:center; font-weight:normal; vertical-align:middle">Fecha inicio</th>
                <th style="text-align:center; font-weight:normal; vertical-align:middle">Fecha fin</th>
                <th style="text-align:center; font-weight:normal; vertical-align:middle">&equiv;</th>
            </tr>
        </thead>

        <tbody>
            @*| limitTo : 3*@
            <tr ng-repeat="x in listOfertas">
                <td style="vertical-align:middle">{{x.Id}}</td>
                <td style="vertical-align:middle">{{x.IdEmpleador}}</td>
                <td style="vertical-align:middle">{{x.Titulo}}</td>
                <td style="vertical-align:middle">{{x.NumeroVacantes}}</td>
                <td style="vertical-align:middle">{{x.Sueldo}}</td>
                <td style="vertical-align:middle">{{x.FechaLanzamientoString}}</td>
                <td style="vertical-align:middle">{{x.FechaFinString}}</td>
                <td style="vertical-align:middle"><button class="btn btn-warning" data-toggle="modal" ng-click="ModalOfertas(x.Id)">Ver detalles</button></td>
            </tr>
        </tbody>
    </table>
    <br />
    <br />
    <br />
    <br />
</div>
