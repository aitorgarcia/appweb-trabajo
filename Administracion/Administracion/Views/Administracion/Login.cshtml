<!-- Scripts-->
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
<script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-i18n/1.5.0/angular-locale_es-es.min.js"></script>

<script src="~/Scripts propios/administracionController.js"></script>

<div ng-app="app">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4" style="height:780px">
            <br><br><br>
            <div class="well" style="border-radius:0; background-color:#39b3d7; padding:0; margin:0;">
                <h5 style="text-align:center; color:white; font-variant:small-caps">Panel de administración</h5>
            </div>
            <div class="well" style="border-radius:0; background-color:#f9f9f9;">
                <div ng-controller="AdministracionController" data-ng-init="init()" class="demo" style="width:auto">
                    <form id="userForm" method="post" name="userForm" ng-show="!signUp.submitted" ng-submit="userForm.$valid">
                        <div class="form-group">
                            <i class="glyphicon glyphicon-user" style="color:#39b3d7"></i><span style="color:#4aa1bb"> Usuario:</span><br />
                            <input type="text" ng-model="admin.Usuario" class="form-control" name="usuario" id="usuario" style="border-radius:0; max-width:500px; border-color:#dedede;" required />
                            <span class="text-danger" ng-show="userForm.users.$error.required && (userForm.users.$dirty && userForm.users.$touched)"></span>
                        </div>

                        <div class="form-group clearfix" style="margin-bottom:0;">
                            <i class="glyphicon glyphicon-lock" style="color:#39b3d7"></i><span style="color:#4aa1bb"> Contraseña:</span><br />
                            <input type="password" ng-model="admin.Contrasena" class="form-control" name="contrasena" id="contrasena" style="border-radius:0; max-width:500px; border-color:#dedede;" required /> <br />
                            <input type="submit" class="btn btn-info pull-right" value=" Acceder" id="btn-submit" ng-click="ValidarDatos()" style="border-radius:0; border:none;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>